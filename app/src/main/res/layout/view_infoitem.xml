<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <RelativeLayout
        android:id="@+id/rl_my_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/iv_my_left_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            android:src="@android:drawable/alert_light_frame"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_my_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_my_left_icon"
            android:minWidth="70dp"
            android:text="我是商家"
            android:textColor="#555"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/rl_my_left_text"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16">


        <ImageView
            android:id="@+id/iv_my_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:contentDescription="@null"
            android:src="@drawable/arrow_to_right"
            android:visibility="visible" />

        <EditText
            android:id="@+id/tv_my_right_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_my_arrow"
            android:background="@android:color/white"
            android:ellipsize="end"
            android:gravity="end"
            android:hint="未填写"
            android:singleLine="true"
            android:textColor="#555"
            android:textColorHint="#ccc"
            android:textSize="13sp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>

