<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/bottom_send_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_black30"
            android:padding="5dp"
            android:src="@drawable/icon_send_message" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bottom_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_circle_black30"
                android:padding="5dp"
                android:src="@drawable/icon_message" />

            <ImageView
                android:id="@+id/bottom_gift"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_circle_black30"
                android:padding="5dp"
                android:src="@drawable/icon_gift" />

            <ImageView
                android:id="@+id/bottom_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_circle_black30"
                android:padding="5dp"
                android:src="@drawable/icon_share" />

            <ImageView
                android:id="@+id/bottom_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_black30"
                android:padding="5dp"
                android:src="@drawable/icon_close" />
        </LinearLayout>
    </LinearLayout>
</layout>